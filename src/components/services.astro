---
import { Tick } from "@components/ui/icons";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";

const { service } = Astro.props;
---

<div>
  <div
    class="flex flex-col w-full order-first lg:order-none border-2 border-[#D8DEE9] border-opacity-50 py-5 px-6 rounded-md">
    <div class="text-center">
      <h4 class="mt-3 mb-1 text-4xl font-bold text-black md:text-4xl">
        {service.name}
      </h4>
      <p class="text-lg font-medium text-gray-400">
        {service.desc}
      </p>
    </div><ul class="grid mt-6 text-left gap-y-4">
      {
        service.features.map((item) => {
          if (item === "") {
            return (
              <li class="flex items-start gap-3 text-gray-800">
                <span>{item}</span>
              </li>
            );
          } else {
            return (
              <li class="flex items-start gap-3 text-gray-800">
                <Tick class="w-6 h-6" />
                <span>{item}</span>
              </li>
            );
          }
        })
      }
    </ul><div class="flex mt-6">
      <Link
        href="/contact"
        block
        style={"muted"}>
        Asesorarme
      </Link>
    </div>
  </div>
</div>
